@model IEnumerable<KargoTakip.WebUI.Models.AdresDto>

@{
    ViewData["Title"] = "Index";
    Layout = "AdminLayout";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AdresAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Detay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostaKodu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sehir)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ilce)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AdresAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Detay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostaKodu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sehir.SehirAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ilce.IlceAdi)
            </td>
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
