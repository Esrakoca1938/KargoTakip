@model IEnumerable<KargoTakip.WebUI.Models.UcretDto>

@{
    ViewData["Title"] = "Index";
    Layout = "AdminLayout";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Buyukluk)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tutar)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Buyukluk)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tutar)
            </td>
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
