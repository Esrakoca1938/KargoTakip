@{
	ViewData["Title"] = "Kargo Sorgulama";
	Layout = "UserLayout";
}
@model KargoTakipDto
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchResult">
            <div class="form-group">
                <label asp-for="TakipNo" class="control-label"></label>
                <input asp-for="TakipNo" class="form-control" />
                <span asp-validation-for="TakipNo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

